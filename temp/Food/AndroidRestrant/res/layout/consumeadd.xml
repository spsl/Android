<TextView 
     android:text="数量" 
     android:gravity="center"
     android:textSize="14px"
     
     android:id="@+id/tvFoodNum" 
     android:layout_width="40px" 
     android:layout_height="30px">
</TextView>

<TextView 
     android:text="金额" 
     
     android:textSize="14px"
     android:gravity="center"
     android:id="@+id/tvFoodTotalPrice" 
     android:layout_width="60px" 
     android:layout_height="30px">
</TextView>

</LinearLayout>
