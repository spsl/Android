<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login1"
    android:gravity="center|left"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:contentDescription="@string/hello_world"
        android:gravity="center"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editName"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/user_name"
        android:textSize="40sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:hint="@string/upload_hint"
        android:ems="10"
        android:textSize="30sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editPassword"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/user_password"
        android:textSize="40sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonLogin"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editPassword"
        android:layout_below="@+id/editPassword"
        android:background="@drawable/button_shape"
        android:text="@string/user_login"
        android:textSize="28sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/buttonSignup"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editPassword"
        android:layout_below="@+id/editPassword"
        android:background="@drawable/button_shape"
        android:text="@string/user_signup"
        android:textSize="28sp"
        android:typeface="serif" />

</RelativeLayout>