<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trace"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_order_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />
    
    <TextView
        android:id="@+id/textView_order_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_order_item"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_order_user"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_order_id"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />


    <Button
        android:id="@+id/button_action"
        style="@style/button_text_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_order_status"
        android:layout_marginTop="68dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:text="@string/order_action_button"
        android:textSize="18sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/button_trace"
        style="@style/button_text_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_action"
        android:layout_marginTop="52dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:text="@string/order_action_trace"
        android:textSize="18sp"
        android:typeface="serif" />

</RelativeLayout>