<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/titlelogo"
        android:layout_width="66sp"
        android:layout_height="66sp"
        android:layout_alignBottom="@+id/title_browse"
        android:layout_alignTop="@+id/title_browse"
        android:layout_marginLeft="37dp"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/titlelogo" />

    <TextView
        android:id="@+id/title_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="320dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/titlelogo"
        android:text="Food Detail"
        android:textColor="#800000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/titlelogo2"
        android:layout_width="66sp"
        android:layout_height="66sp"
        android:layout_alignBottom="@+id/textView_item_id"
        android:layout_alignTop="@+id/textView_item_id"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/titlelogo2" />

    <TextView
        android:id="@+id/textView_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlelogo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="75dp"
     
        android:layout_toRightOf="@+id/titlelogo2"
        android:text="@string/hello_world"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_item_id"
        android:layout_below="@+id/textView_item_id"
        android:layout_marginTop="23dp"
        android:text="@string/hello_world"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_item_name"
        android:layout_below="@+id/textView_item_name"
        android:layout_marginTop="23dp"
        android:text="@string/hello_world"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonOrder"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView_item_price"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_shape"
        android:text="@string/item_action_order"
        android:textSize="18sp" />

</RelativeLayout>